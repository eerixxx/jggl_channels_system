# Django settings
DJANGO_SETTINGS_MODULE=backend.settings.development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/channels_admin
POSTGRES_DB=channels_admin
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram Bot Service
TELEGRAM_BOT_SERVICE_URL=http://bot-service:8001
TELEGRAM_BOT_SERVICE_TOKEN=your-bot-service-token

# LLM Translation Service
TRANSLATION_SERVICE_URL=http://translation-service:8002
TRANSLATION_SERVICE_TOKEN=your-translation-service-token

# Prometheus
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO

