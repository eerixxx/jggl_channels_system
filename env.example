# Django settings
DJANGO_SETTINGS_MODULE=backend.settings.development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/channels_admin
POSTGRES_DB=channels_admin
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==============================================================================
# Telegram Bot Gateway
# ==============================================================================
# External service that handles Telegram Bot API interactions
# API Documentation: http://178.217.98.201:8001/docs

# Gateway URL (default for production)
TELEGRAM_BOT_SERVICE_URL=http://178.217.98.201:8001

# API Token for authentication (INTERNAL_API_TOKEN on the gateway side)
TELEGRAM_BOT_SERVICE_TOKEN=your-bot-service-token

# Request timeout in seconds
TELEGRAM_BOT_GATEWAY_TIMEOUT=30

# Enable idempotency keys to prevent duplicate message sends
TELEGRAM_BOT_ENABLE_IDEMPOTENCY=true

# Use MTProto API for detailed statistics (views, reactions, etc.)
# MTProto must be configured on Gateway side first!
# See Gateway docs for MTProto setup instructions
TELEGRAM_USE_MTPROTO_STATS=true

# ==============================================================================
# LLM Translation Middleware
# ==============================================================================
# External service for AI-powered text translation
# API Documentation: http://178.217.98.201:8002/docs

# Translation Service URL
TRANSLATION_SERVICE_URL=http://178.217.98.201:8002

# API Token for authentication
TRANSLATION_SERVICE_TOKEN=669d2bb55f63c5145eff622ce926ad52ef266e39c983b572a5ac45159fddf6e9

# Context for better translations (e.g., "crypto news", "medical", "tech")
TRANSLATION_CONTEXT=news channel

# Tone of translations: formal, casual, professional
TRANSLATION_TONE=professional

# ==============================================================================
# Site Settings (for external media URLs)
# ==============================================================================
# Required for sending photos to Telegram - must be publicly accessible URL
# For local development, use ngrok or similar tunneling service
SITE_URL=http://localhost:8000

# ==============================================================================
# Monitoring
# ==============================================================================

# Prometheus
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
